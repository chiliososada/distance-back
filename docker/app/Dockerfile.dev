FROM golang:1.23

WORKDIR /app

# 安装必要的系统依赖
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# 复制 go.mod 和 go.sum
COPY go.mod go.sum ./

# 下载依赖
RUN go mod download

# 复制源代码
COPY . .

# 设置环境变量
ENV GO_ENV=development
ENV GIN_MODE=debug

# 暴露端口
EXPOSE 8080

# 启动命令
CMD ["go", "run", "cmd/app/main.go"]